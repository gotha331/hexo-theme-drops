<div class="sidebar">
	<div class="sidebar-header">
		<div class="blog-avatar">
			<img src="/css/images/avatar.jpg" alt="avatar" />
		</div>
		<div class="blog-title">
			<a href="<%- url_for() %>" class="title"><%= config.title %></a>
			<a href="<%- url_for() %>" class="sub-title"><%= config.subtitle %></a>
		</div>
	</div>

	<nav class="navbar">
		<ul class="menu">
			<% for (name in theme.menu) { %>
			<li class="menu-item">
				<a href="<%- url_for(theme.menu[name]) %>" class="menu-item-link">
					<%- __('Menu.' + name) %>
				</a>
			</li>
			<% } %>
		</ul>
	</nav>
</div>
